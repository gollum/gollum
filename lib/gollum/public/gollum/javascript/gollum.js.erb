    var ok = confirm($(this).data('confirm'));
    if ( ok ) {
      var element = $(this);
      $.post(routePath('delete') + '/' + $(this).data('file-path'),
        {},
        function (result) {
          // file successfully deleted, stay on overview but remove element from DOM
          element.closest("li").remove();
        });
    }
    // Don't navigate on cancel.
    e.preventDefault();
  } );

  // ua detection
