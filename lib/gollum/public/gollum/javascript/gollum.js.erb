    $(".tabnav-tab").click( function(e) {
      e.preventDefault();
      if( !$(this).hasClass('selected') ) {
        preview = $(this).attr('id') == 'preview';
        if (preview) {
          getPreview();
        }
        togglePreviewTab(preview);
      };
    });
  };

