    if (preview) {
      active_div = '#preview-content'
      active_tab = '#preview.tabnav-tab';
    } else {
      active_div = '#edit-content'
      active_tab = '#edit.tabnav-tab';
    }

    $('.tabnav-tab.selected').removeClass('selected');
    $(active_tab).addClass('selected');
    $('.tabnav-div').hide();
    $(active_div).show();
  }

